<div class="container">
  <h3><%= @quiz.name %></h3>

  <% @questions.each do |question| %>
    <div class="card">
      <p><%= question.content %></p>
      <p><%= question.choice_one %> / <%= question.choice_two %></p>
    </div>
  <% end %>

  <p>Author: <%= @user_name %></p>

  <div class="d-flex justify-content-center">
    <%= link_to my_own_quizzes_path(@quiz) do %>
      <button class="btn-gradient">Go back</button>
    <% end %>

    <% if current_user == @user %>
      <%= link_to edit_quiz_path(@quiz) do %>
        <button class="btn-gradient">Edit quiz</button>
      <% end %>
      <%= link_to quiz_path(@quiz), data: {turbo_method: :delete} do %>
        <button class="btn-gradient">Delete quiz</button>
      <% end %>
    <% end %>
  </div>

  <%= @message %>

</div>
